<Window x:Class="EZiePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EZiePlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid Background="#FF427F9A">
        <Slider Name="sliderPos" ValueChanged="SliProgress_ValueChanged" Margin="10,285,10,464" Thumb.DragStarted="SliderPos_DragStarted" Thumb.DragCompleted="SliderPos_DragCompleted" />
        <Slider Name="slVol" Minimum="0" Maximum="100" Value="50" Margin="0,207,50,0" VerticalAlignment="Top" Height="19" Cursor="Arrow" HorizontalAlignment="Right" Width="200" ValueChanged="SlVol_ValueChanged"/>
        
        <Button x:Name="previous"  HorizontalAlignment="Left" Margin="50,160,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Previous_Click" >
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\forwards.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" >
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </StackPanel>
        </Button>
        <Button x:Name="play" HorizontalAlignment="Left" Margin="140,150,0,0" VerticalAlignment="Top" Width="100" Height="100" Click="Play_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\play.png" Stretch="Fill" />
            </StackPanel>
        </Button>
        <Button x:Name="pause" HorizontalAlignment="Left" Margin="250,160,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Pause_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\pause.png" Stretch="Fill" />
            </StackPanel>
        </Button>
        <Button x:Name="stop" HorizontalAlignment="Left" Margin="340,160,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Stop_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\stop.png" Stretch="Fill" />
            </StackPanel>
        </Button>
        <Button x:Name="forward" HorizontalAlignment="Left" Margin="430,160,0,0" VerticalAlignment="Top" Width="80" Height="80" Click="Forward_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\forwards.png" Stretch="Fill" />
            </StackPanel>
        </Button>
        <Button x:Name="source" HorizontalAlignment="Right" Margin="0,20,20,0" VerticalAlignment="Top" Width="60" Height="60" Click="Source_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\folder.png" Stretch="Fill" />
            </StackPanel>
        </Button>
        <Button x:Name="mute" HorizontalAlignment="Right" Margin="0,140,60,0" VerticalAlignment="Top" Width="60" Height="60" Click="Mute_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill"/>
            </Button.Background>
            <StackPanel>
                <Image Source="C:\Users\Администратор\Desktop\DevPlayer\EZiePlayer\DesignEZiePlayer\mute.png" Stretch="Fill" />
            </StackPanel>
        </Button>
        <ListBox Name="playlist"  Margin="30,310,30,30" Foreground="Black" FontSize="20"  MouseDoubleClick="Play_Click">
            <ListBox.Background>
                <ImageBrush/>
            </ListBox.Background>
            <ListBox.BorderBrush>
                <ImageBrush/>
            </ListBox.BorderBrush>
        </ListBox>
        <TextBlock  FontSize="24" FontStyle="Italic" Name="lblProgressStatus" Margin="10,245,680,484">00:00:00</TextBlock>
    </Grid>
</Window>
